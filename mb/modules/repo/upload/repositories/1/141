#include <stdio.h>

int main() 
{
	int integer; 
	int x;
	do{
		printf("Enter an integer: ");
		scanf("%d",&integer);
		x = integer;
		while(integer > 0){
			if(integer >= 1000){
				printf("M");
				integer -= 1000;
				continue;
			}
			if(integer >= 900){
				printf("CM");
				integer -= 900;
				continue;
			}
			if(integer >= 500){
				printf("D");
				integer -= 500;
				continue;
			}
			if(integer >= 400){
				printf("CD");
				integer -= 400;
				continue;
			}
			if(integer >= 100){
				printf("C");
				integer -=100;
				continue;
			}		
			if(integer >= 90){
				printf("XC");
				integer -=90;
				continue;
			}
			if(integer >= 50){
				printf("L");
				integer -=50;
				continue;
			}
			if(integer >= 40){
				printf("XL");
				integer -=40;
				continue;
			}
			if(integer >= 10){
				printf("X");
				integer -=10;
				continue;
			}
			if(integer >= 9){
				printf("IX");
				integer -=9;
				continue;
			}
			if(integer >= 5){
				printf("V");
				integer -=5;
				continue;
			}
			if(integer >= 4){
				printf("IV");
				integer -=4;
				continue;
			}
			if(integer >= 1){
				printf("I");
				integer -=1;
				continue;
			}
		}
		printf("\n");
	}while (x != 0);
}