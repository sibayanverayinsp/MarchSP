#include<stdio.h>

int rec_raise();

main(){

	int x, y, r;
	
		printf("value of x: ");
		scanf("%d",&x);
		printf("value of y: ");
		scanf("%d",&y);

		r=rec_raise(x,y);
		
		printf("%d^%d = %d\n",x,y,r);
				
}

int rec_raise(int a, int b)
{
	
	
		if(b==0)
		{
			return 1;
		}
		else if(b>0)
		{
			
			return a*rec_raise(a,b-1);
		}
		
		
		else
			return a;	
}
